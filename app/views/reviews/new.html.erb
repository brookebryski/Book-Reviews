<h1> Add a Review <%= @review.book.author.title %></h1>

<%= render partial: 'layouts/errors', locals: {object: @review}  %>

<%= form_for(@review) do |f| %>
    <%= f.label :stars %>
    <%= f.number_field :stars, min: 0, max: 5 %>
  </div>
  <br>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <br>
  <%= f.hidden_field :book_id %>

  <%= f.submit %>

    <% end %>