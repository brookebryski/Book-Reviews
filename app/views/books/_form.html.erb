 <%= render partial: 'errors', locals: {object: @book}  %>
<% form_for(@book) do |f|%>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <br>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <br>

  <p> Select an Author that already exists: </p>
  <div>
    <%= f.collection_select :author_id, Author.all, :id, :name, include_blank: 'Select One'%>

  </div>

  <p> Or create a new Author: </p>
  <div>
    <%=f.fields_for :author do |a| %>
      <%= a.label :name %>
      <%= a.text_field :name %>
    <% end %>
  </div>
  <br>
  <%= f.submit %>
<% end %>